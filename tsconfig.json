{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true                                /* Skip type checking all .d.ts files. */
  }, 
  "include" : [ "./src/**/*" ], 
  "exclude": ["node_modules", "tests", "dist", "**/*spec.ts"]

}
